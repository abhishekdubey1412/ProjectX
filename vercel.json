{
    "version": 2,
    "builds": [
        {
            "src": "ProjectX/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": { 
                "distDir": "static_root" 
            }
        }
    ],
    "routes": [
        {
            "src": "/static_root/",
            "dest": "/static_root/"
        },
        {
            "src": "/(.*)",
            "dest": "ProjectX/wsgi.py"
        }
    ]
}
